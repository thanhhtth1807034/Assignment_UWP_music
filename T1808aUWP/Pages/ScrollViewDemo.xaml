    <!--<StackPanel x:Name="Students"></StackPanel>-->
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
    </Page.Resources>
    <StackPanel>
        <ListView x:Name="MyListView" ItemsSource="{x:Bind listStudents}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="entity:Student">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="60" Width="60">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding Image}"></ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock FontSize="20" FontWeight="Bold" Text="{Binding Name}"></TextBlock>
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBox x:Name="TokenKey"></TextBox>
        <TextBox x:Name="UId"></TextBox>
        <TextBox x:Name="FirstName"></TextBox>
        <TextBox x:Name="LastName"></TextBox>
        <TextBox x:Name="Avatar"></TextBox>
        <TextBox x:Name="Phone"></TextBox>
        <TextBox x:Name="Address"></TextBox>
        <TextBox x:Name="Gender"></TextBox>
        <TextBox x:Name="Birthday"></TextBox>
        <TextBox x:Name="Email"></TextBox>
    </StackPanel>
</Page>
